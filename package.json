{
	"name": "@nsis/nlf",
	"version": "0.12.0",
	"description": "Parser and stringifier for NSIS Language Files",
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:knip": "knip --production",
		"lint:publint": "publint",
		"prepack": "npm run build",
		"prepare": "lefthook install",
		"publish:npm": "np --any-branch",
		"test": "uvu -r tsm tests"
	},
	"files": [
		"dist/",
		"types/",
		"LICENSE",
		"README.md"
	],
	"type": "module",
	"exports": "./dist/index.js",
	"typings": "./dist/index.d.ts",
	"engines": {
		"node": ">=20.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/node-nlf.git"
	},
	"keywords": [
		"nsis",
		"nsis language file",
		"converter"
	],
	"dependencies": {
		"json5": "^2.2.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@idleberg/configs": "^0.3.1",
		"@types/node": "^24.6.2",
		"@vitest/coverage-v8": "^3.2.4",
		"concurrently": "^9.2.1",
		"esbuild": "^0.25.10",
		"knip": "^5.65.0",
		"np": "^10.2.0",
		"publint": "^0.3.14",
		"tsdown": "^0.15.6",
		"uvu": "^0.5.6"
	},
	"packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d"
}
